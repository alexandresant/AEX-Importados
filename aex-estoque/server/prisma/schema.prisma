generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id         Int     @id @default(autoincrement())
  nome       String
  codigo     String  @unique
  preco      Float
  quantidade Int
  categoria  String
}

model Fornecedor {
  id        Int @id @default(autoincrement())
  nome      String
  codigo    String @unique
  contato   String
  telefone  String 
  email     String
}

model Usuario {
  id        Int @id @default(autoincrement())
  nome      String
  senha     String
  email     String
}