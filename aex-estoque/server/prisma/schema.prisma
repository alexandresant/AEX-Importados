generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id                      Int     @id @default(autoincrement())
  nome                    String
  codigo                  String  @unique
  preco                   Float
  quantidade              Int
  categoria               String
  fornecedorId            Int?
  fornecedor              Fornecedor? @relation(fields: [fornecedorId], references: [id])
  movimetacoesEstoque     Estoque[]
}

model Fornecedor {
  id        Int @id @default(autoincrement())
  nome      String
  codigo    String @unique
  contato   String
  telefone  String 
  email     String
  produtos Produto[]
}

model Usuario {
  id                  Int @id @default(autoincrement())
  nome                String
  senha               String
  email               String
  movimetacoesEstoque Estoque[]
}

enum TipoMovimentacao {
  ENTRADA
  SAIDA
}

enum MotivoEntrada {
  COMPRA
  DEVOLUCAO
  AJUSTE_ESTOQUE
}

enum MotivoSaida {
  VENDA
  CONSUMO
  TROCA
  PERDA
  AJUSTE_ESTOQUE
}

model Estoque {
  id Int @id @default(autoincrement())
  produtoId Int
  produto Produto @relation(fields: [produtoId], references: [id])
  quantidade Int
  tipoMovimentacao TipoMovimentacao
  motivoEntrada MotivoEntrada?
  motivoSaida MotivoSaida?
  dataMovimentacao DateTime @default(now())
  usuarioId Int?
  usuario Usuario? @relation(fields: [usuarioId], references: [id])
}
